<p id="notice"><%= notice %></p>

<h1>Props</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Theme</th>
      <th>Price</th>
      <th>User</th>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @props.each do |prop| %>
      <tr>
        <td><%= prop.name %></td>
        <td><%= prop.theme %></td>
        <td><%= prop.price %></td>
        <td><%= prop.user_id %></td>
        <td><%= image_tag(prop.picture_url.to_s, class: "picture_icon") %></td>

        <% if prop.user_id == current_user.id %>
        <td><%= link_to 'Edit', edit_prop_path(prop) %></td>
        <td><%= link_to 'Destroy', prop, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
        <td><%= link_to 'Show', prop %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>
