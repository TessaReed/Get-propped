<p id="notice"><%= notice %></p>

<h1>Props</h1>

<h2>Search</h2>
<table>
  <thead>
    <tr>
      <th></th>
    </tr>
  </thead>

  <% @props.inspect %>

  <tbody>
    <tr>
      <% @props.each do |prop| %>
        <div class='task'>
            <strong> <%= prop.name %> </strong>
        </div>
        <%= link_to 'Edit', edit_prop_path(props) %>
      <% end %>
     </tr>
  </tbody>
</table>

<%= form_tag(props_path, method: :get) do %>
  <%= text_field_tag :term, params[:term] %>
  <%= submit_tag 'Search', name: nil %>
<% end %>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Theme</th>
      <th>Price</th>
      <th>User</th>
      <th>Image data</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @props.each do |prop| %>
      <tr>
        <td><%= prop.name %></td>
        <td><%= prop.theme %></td>
        <td><%= prop.price %></td>
        <td><%= prop.user_id %></td>
        <td><%= prop.image_data %></td>
        <td><%= link_to 'Show', prop %></td>
        <td><%= link_to 'Edit', edit_prop_path(prop) %></td>
        <td><%= link_to 'Destroy', prop, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Prop', new_prop_path %>
