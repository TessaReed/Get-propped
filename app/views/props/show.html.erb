

<div class="alert alert-success" role="alert">
  <p id="notice"><%= notice %></p>
</div>

<div class="row">
  <div class="col"></div>
  <div class="col">
    <%= image_tag(@prop.picture_url.to_s, class: "picture_icon, card-img-top", style: 'width: 20rem') %>
  </div>
  <div class="col"></div>
</div>

<div class="row">
  <div class="col">
    <p>
      <strong>Name:</strong>
      <%= @prop.name %>
    </p>
  </div>
</div>

<div class="row">
  <div class="col">
    <p>
      <strong>Theme:</strong>
      <%= @prop.theme %>
    </p>
  </div>
</div>

<div class="row">
  <div class="col">
    <p>
      <strong>Price:</strong>
      $<%= @prop.price %>
    </p>
  </div>
</div>

<div class="row">
  <div class="col">
    <p>
      <strong>User:</strong>
      <%= @prop.user.profile.username %>
